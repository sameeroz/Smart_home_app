                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.scwang.wave.MultiWaveHeader
            android:id="@+id/tank"
            android:layout_width="0px"
            android:layout_height="400px"
            app:layout_constraintBottom_toBottomOf="@+id/photo_tank"
            app:layout_constraintLeft_toLeftOf="@+id/photo_tank"
            app:layout_constraintRight_toRightOf="@+id/photo_tank"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="11.8dp"
            android:rotation="180"
            app:mwhStartColor="@color/primaryBgColor"
            app:mwhWaveHeight="5dp"
            app:mwhVelocity="5"
            app:mwhShape="RoundRect"
            app:mwhCornerRadius="25dp"
            />

        <ImageView
            android:id="@+id/photo_tank"
            android:layout_width="140dp"
            android:layout_height="220dp"
            android:src="@drawable/tank"
            android:scaleType="fitXY"
            android:layout_marginTop="50dp"
            app:layout_constraintRight_toLeftOf="@+id/waterpercent_circle"
            app:layout_constraintTop_toBottomOf="@id/weather_box"
            app:layout_constraintLeft_toLeftOf="parent"
            >

        </ImageView>


        <com.github.pavlospt.CircleView
            android:id="@+id/waterpercent_circle"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:layout_constraintLeft_toRightOf="@+id/photo_tank"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_box"
            app:layout_constraintBottom_toBottomOf="@id/photo_tank"
            android:layout_marginTop="50dp"
            app:cv_titleText=""
            app:cv_subtitleText=""
            app:cv_titleSize="32dp"
            app:cv_subtitleSize="12dp"
            app:cv_titleColor="@color/white"
            app:cv_subtitleColor="@color/white"
            app:cv_titleSubtitleSpace="30"
            app:cv_strokeColorValue="@color/login_btn_color"
            app:cv_backgroundColorValue="@color/primaryBgColor"
            app:cv_fillColor="@color/login_btn_color"
            app:cv_fillRadius="0.9"
            app:cv_strokeWidthSize="2"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintTop_toTopOf="@+id/waterpercent_circle"
            app:layout_constraintBottom_toBottomOf="@+id/waterpercent_circle"
            app:layout_constraintLeft_toLeftOf="@+id/waterpercent_circle"
            app:layout_constraintRight_toRightOf="@+id/waterpercent_circle"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    app:layout_constraintTop_toTopOf="@+id/waterpercent"
                    app:layout_constraintBottom_toBottomOf="@+id/waterpercent"
                    app:layout_constraintLeft_toLeftOf="@+id/waterpercent"
                    app:layout_constraintRight_toRightOf="@+id/waterpercent"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp">
                        <TextView
                            android:id="@+id/waterpercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="26sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="18sp" />




                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Percentage"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photo_tank"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#e3f2fa"
            app:cardElevation="30dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                       android:orientation="horizontal">

                       <androidx.cardview.widget.CardView
                           android:id="@+id/energy_cardview"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:backgroundTint="@color/red"
                           android:layout_margin="15dp"
                           app:cardElevation="30dp"
                           app:cardCornerRadius="30dp">

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:orientation="horizontal"
                                   android:padding="5dp">

                                       <ImageView
                                           android:padding="5dp"
                                           android:layout_width="50dp"
                                           android:layout_height="50dp"
                                           android:src="@drawable/energy"
                                           android:scaleType="fitXY"
                                           android:layout_gravity="center_vertical"
                                           />

                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="match_parent"
                                           android:text="Energy"
                                           android:textColor="#e3f2fa"
                                           android:layout_marginHorizontal="15dp"
                                           android:gravity="center_vertical"
                                           android:scaleType="fitXY"
                                           android:layout_gravity="center_vertical"
                                           />

                               </LinearLayout>

                       </androidx.cardview.widget.CardView>

                       <TextView
                           android:id="@+id/devices_view"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:text="0"
                           android:textColor="@color/login_btn_color"
                           android:layout_marginStart="15dp"
                           android:gravity="center_vertical"
                           android:scaleType="fitXY"
                           android:layout_gravity="center_vertical"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:text="x Devices Turn On"
                           android:gravity="center_vertical"
                           android:textColor="@color/login_btn_color"
                           android:scaleType="fitXY"
                           android:layout_marginEnd="15dp"
                           android:layout_gravity="center_vertical"
                           />

               </LinearLayout>

        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:visibility="gone"
            android:id="@+id/try_again_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="60dp"
            android:gravity="center_vertical"
            android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:translationZ="90dp"
                    android:paddingHorizontal="35dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_weight="0.4"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:text="No Internet Connection, please try again">

                        </TextView>

                        <ImageView
                            android:id="@+id/try_again"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.6"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/try_again">

                        </ImageView>

                </LinearLayout>

        </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>