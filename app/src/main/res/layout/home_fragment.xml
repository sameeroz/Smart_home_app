<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_fragments.Home"
    android:textColor="@color/text_color"
    android:paddingTop="60dp">




        <androidx.cardview.widget.CardView
            android:id="@+id/weather_box"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#e3f2fa"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="20dp">

                                        <ImageView
                                            android:id="@+id/weather"
                                            android:layout_width="100dp"
                                            android:layout_height="70dp"
                                            android:src="@drawable/weather"
                                            android:scaleType="fitXY"
                                            android:layout_gravity="center_vertical"
                                            />

                                               <LinearLayout
                                               android:layout_gravity="center_horizontal"
                                               android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                              android:layout_marginTop="20dp"
                                                   android:layout_marginStart="-10dp"
                                              android:orientation="horizontal">

                                                  <TextView
                                                      android:id="@+id/temperature_view"
                                                      android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content"
                                                      android:layout_marginStart="20dp"
                                                      android:text="0"
                                                      app:autoSizeTextType="uniform"
                                                      app:autoSizeMinTextSize="20sp"
                                                      app:autoSizeMaxTextSize="30sp"
                                                      app:autoSizeStepGranularity="2sp"
                                                      android:textColor="@color/login_btn_color"
                                                      android:textSize="28sp" />


                                                          <TextView
                                                              android:layout_width="wrap_content"
                                                              android:layout_height="wrap_content"
                                                              android:layout_marginStart="6dp"
                                                              android:layout_gravity="end"
                                                              android:text="c"
                                                              android:textColor="@color/login_btn_color"
                                                              android:textSize="13sp" />

                                                          </LinearLayout>
                                                  </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="0dp">

                                        <ImageView
                                            android:layout_height="50dp"
                                            android:layout_width="50dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginHorizontal="20dp"
                                            android:src="@drawable/humidity2"/>

                                        <LinearLayout
                                            android:layout_gravity="center_horizontal"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="30dp"
                                            android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/humidity"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:text="0"
                                                    app:autoSizeTextType="uniform"
                                                    app:autoSizeMinTextSize="20sp"
                                                    app:autoSizeMaxTextSize="30sp"
                                                    app:autoSizeStepGranularity="2sp"
                                                    android:textColor="@color/login_btn_color"
                                                    android:textSize="28sp" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:text="%"
                                                    android:textColor="@color/login_btn_color"
                                                    android:textSize="13sp" />

                                        </LinearLayout>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="right">
                                        <TextView
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Sana'a"
                                            android:textColor="@color/login_btn_color"
                                            android:textSize="26sp" />

                                        <TextView
                                            android:id="@+id/time_view"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="center"
                                            android:textAlignment="center"
                                            android:text="01.05 PM"
                                            android:textColor="@color/login_btn_color"
                                            android:textSize="14sp" />
                                </LinearLayout>



                        </LinearLayout>

